Tennis Bag Name:  <%= @tennis_bag.name %><br />
  Tennis Bag Capacity:  <%= @tennis_bag.capacity %> <br />
  <br />
  <br />
  <h4> Create New Racquet </h4>
  <form action="/racquets" method="post">
    <label> Racquet Name </label>
    <input type="text" name="name"> </br>
    <br />
    <br />
    <label> Racquet Manufacturer </label>
    <input type="text" name="manufacturer"> </br>
    <input type="hidden" name="tennis_bag_id" value="<%=@tennis_bag.id%>">
    <input type="submit" value="Create">
    <br />
    <br />
  </form>
  <h3>Racquets</h3>
  <ul>
  <% @tennis_bag.racquets.each do |racquet| %>
    <li><a href="/racquets/<%=racquet.id%>"><%= racquet.name %></a></li>
    <li><%= racquet.manufacturer %></li>

  <% end%>
  </ul>
  <a href="/tennis_bags/<%=@tennis_bag.id%>/edit">Edit</a>
  <br />
  <br />

  <form action="/tennis_bags/<%= @tennis_bag.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
